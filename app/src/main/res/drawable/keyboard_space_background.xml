<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:id="@+id/space_pressed" android:bottom="@dimen/medium_margin" android:left="@dimen/tiny_margin" android:right="@dimen/tiny_margin" android:state_pressed="true" android:top="@dimen/medium_margin">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_600" />
                    <corners android:radius="@dimen/activity_margin" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:id="@+id/space_normal" android:bottom="@dimen/medium_margin" android:left="@dimen/tiny_margin" android:right="@dimen/tiny_margin" android:state_pressed="true" android:top="@dimen/medium_margin">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_700" />
                    <corners android:radius="@dimen/activity_margin" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
